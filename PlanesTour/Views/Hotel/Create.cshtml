@model IEnumerable<PlanesTour.Core.Domain.Location>
@{
    ViewBag.Title = "Create";
}
<link href="/Content/bootstrap-select.css" rel="stylesheet" />
<script src="/Scripts/bootstrap-select.js"></script>

<div class="row">
    <div class="col-lg-offset-5 col-md-offset-5 col-xs-offset-5">
        <h2> Formulario Hotel</h2>
    </div>
</div>
<div class="row">
    <div class="col-lg-offset-3 col-md-offset-3 col-xs-offset-3 col-lg-6">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="/hotel/create " id="hotelForm">
            <div class="form-group form-group-lg">
                <label class="col-sm-3 control-label" for="hotelName">Nombre</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" id="hotelName"
                           placeholder="Nombre del hotel" name="Name"
                           style="border-color:#55AB26;">
                </div>
            </div>
            <div class="form-group form-group-lg">
                <label class="col-sm-3 control-label" for="hotelName">Destino</label>
                <div class="col-sm-8">
                    <select class="locationPicker" id="locationSelect" name="LocationId" 
                            data-live-search="true" title="Destino">
                        @foreach (var location in Model)
                        {
                            <option value="@location.Id" >@location.Name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group form-group-lg">
                <label class="col-sm-3 control-label" for="photosInput">Seleccione las fotos</label>
                <div class="col-sm-8">
                    <input class="form-control" type="file" id="photosInput" multiple accept="image/*" name="FileBasePhotos">
                </div>
            </div>

            <div class="form-group form-group-lg">
                <label class="col-sm-3 control-label" for="photosInput">Descripción</label>
                <div class="col-sm-8">
                    <textarea class="form-control" rows="3"
                              placeholder="Descripcion del hotel" style="resize: none;
                                                                                                                              border-color: #55AB26;" name="Description"></textarea>
                </div>
            </div>

            <div class="col-md-offset-2">
                <button class="btn btn-primary" type="submit"> Crear</button>
            </div>
        </form>
    </div>
</div>

<script>
    $(function() {
        $('.locationPicker').selectpicker();
    });
</script>